<h1 class="text-center my-4">Welcome to Technova Store</h1>

<div class="container">
  <!-- Search + Category Filter Form -->
  <div class="container mb-4">
    <%= form_with url: products_path, method: :get, local: true, class: "row g-3 align-items-center" do %>
      <div class="col-auto">
        <%= label_tag :q, "Search", class: "col-form-label" %>
      </div>
      <div class="col-auto">
        <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Search products..." %>
      </div>

      <div class="col-auto">
        <%= label_tag :category_id, "Category", class: "col-form-label" %>
      </div>
      <div class="col-auto">
        <%= select_tag :category_id,
            options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
            include_blank: "All Categories",
            class: "form-select" %>
      </div>

      <!-- Special Filters Dropdown -->
      <div class="col-auto">
        <%= label_tag :filter, "Special Filters", class: "col-form-label" %>
      </div>
      <div class="col-auto">
        <%= select_tag :filter,
            options_for_select([["None", ""], ["On Sale", "on_sale"], ["New Arrivals", "new"]], params[:filter]),
            class: "form-select" %>
      </div>

      <div class="col-auto">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <!-- Product Cards -->
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3 mb-4">
        <div class="card h-100">
          <% if product.image_filename.present? %>
            <%= image_tag("products/#{product.image_filename}", class: "card-img-top", size: "300x200") %>
          <% else %>
            <%= image_tag("products/placeholder.png", class: "card-img-top", size: "300x200") %>
          <% end %>
          <div class="card-body d-flex flex-column">

            <!-- New or On Sale Badges -->
            <% if product.stock_quantity > 25 %>
              <span class="badge bg-danger mb-2">On Sale!</span>
            <% end %>
            <% if product.created_at >= 3.days.ago %>
              <span class="badge bg-success mb-2">New</span>
            <% end %>

            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text mb-1">Price: $<%= product.price %></p>
            <p class="card-text mb-2 text-muted">Category: <%= product.category.name %></p>
            <%= link_to "View Product", product_path(product), class: "btn btn-primary mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @products %>
  </div>
</div>
