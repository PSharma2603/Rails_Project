<h2>Edit Profile</h2>

<%= form_with model: @user, url: profile_path, local: true do |f| %>
  <%= f.label :province_id, "Province" %>
  <%= f.collection_select :province_id, @provinces, :id, :name %><br><br>

  <%= f.fields_for :address do |a| %>
    <%= a.label :street_address %>
    <%= a.text_field :street_address %><br>

    <%= a.label :city %>
    <%= a.text_field :city %><br>

    <%= a.label :postal_code %>
    <%= a.text_field :postal_code %><br>
  <% end %>

  <%= f.submit "Save" %>
<% end %>
