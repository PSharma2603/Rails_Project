<h2>Checkout</h2>

<%= form_with model: @order, url: orders_path, local: true do |f| %>
  <p>You're about to place an order for <%= @cart.total %></p>

  <%# You can show address fields if the user doesn't already have one %>
  <% if current_user.address.blank? %>
    <h3>Address Info</h3>
    <%= fields_for :address do |a| %>
      <%= a.label :street %>
      <%= a.text_field :street %><br>

      <%= a.label :city %>
      <%= a.text_field :city %><br>

      <%= a.label :postal_code %>
      <%= a.text_field :postal_code %><br>

      <%= a.label :province_id %>
      <%= a.collection_select :province_id, @provinces, :id, :name %>
    <% end %>
  <% end %>

  <%= f.submit "Place Order", class: "btn btn-success mt-3" %>
<% end %>
